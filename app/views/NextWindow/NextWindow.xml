<Alloy>
	<View id="container" class="container">
	    <View id="topToolBarContainer" class="topToolBarContainer">
	        <View class="closeButton" onClick="closeWindow"></View>
	    </View>
        <View id="viewContainer" class="viewContainer">
            <!-- MENU -->
            <ScrollableView id="scrollableView" showPagingControl="true" backgroundColor="white">
                <View id="view1" backgroundColor="white"  top="0">
                    <View top="0" height="42" backgroundColor="white" backgroundImage="images/today.png">
                        <View class="backDay" onClick="backDay"></View>
                        <View class="nextDay" onClick="nextDay"></View>
                    </View>
                    <ScrollView id="view11" backgroundColor="red" top="41" bottom="0" contentHeight="1500">
                        <View backgroundImage="Default.png"></View>
                    </ScrollView>
                </View>
                <View id="view2" backgroundColor="white"  top="0">
                    <View top="0" height="42" backgroundColor="white" backgroundImage="images/tuesday.png">>
                        <View class="backDay" onClick="backDay"></View>
                        <View class="nextDay" onClick="nextDay"></View>
                    </View>
                    <ScrollView id="view21" backgroundColor="#256" top="41" bottom="0" contentHeight="1500">
                        <View backgroundImage="Default.png"></View>
                    </ScrollView>
                </View>
                <View id="view3" backgroundColor="white"  top="0">
                    <View top="0" height="42" backgroundColor="white" backgroundImage="images/wednesday.png">>
                        <View class="backDay" onClick="backDay"></View>
                        <View class="nextDay" onClick="nextDay"></View>
                    </View>
                    <ScrollView id="view13" backgroundColor="#28b" top="41" bottom="0" contentHeight="1500">
                        <View backgroundImage="Default.png"></View>
                    </ScrollView>
                </View>
            </ScrollableView>
            <!-- MENU -->
            <!-- INFO -->
            <ScrollView id="scrollView" backgroundColor="white" top="0" bottom="0" contentHeight="560">
                <!--MAP-->
                <View top="0" backgroundColor="white" backgroundImage="images/greyhounds_description.png" height="523">
                    <View right="0" bottom="80" backgroundColor="transparent" opacity="0.1" width="100" height="30" onClick="openAddNew"></View>
                </View>
                <!--MAP-->
            </ScrollView>
            <!-- INFO -->
        </View>
        <View id="bottomOptions" backgroundColor="white" backgroundImage="images/info.png" bottom="0" height="45">
            <View left="115" backgroundColor="transparent" opacity="0.1" width="41"  onClick="byMenu"></View>
            <View left="161" backgroundColor="transparent" opacity="0.1" width="41"  onClick="byInfo"></View>
        </View>
        <!--<View id="tabContainer" class="tabContainer">
            <View id="tab1" class="tab1"></View>
            <View id="tab2" class="tab2"  onClick="callNext"></View>
        </View>-->
	</View>
</Alloy>